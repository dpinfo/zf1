{
    "name": "dpinfo/zf1",
    "description": "Zend Framework 1 - DPI Support",
    "type": "library",
    "keywords": [
        "framework",
        "zf1"
    ],
    "homepage": "http://framework.zend.com/",
    "license": "BSD-3-Clause",
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.2.11"
    },
    "autoload": {
        "classmap": [
            "library/"
        ]
    },
    "include-path": [
        "library/"
    ],
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.12.x-dev"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "phpunit/dbunit": "1.3.*",
        "phpstan/phpstan": "^0.11.2"
    },
    "archive": {
        "exclude": ["/demos", "/documentation", "/tests"]
    },
    "scripts": {
        "phpstan": [
           "@clean",
           "mkdir -p build/phpstan",
           "phpstan analyse -c phpstan.neon library > ./build/phpstan/phpstan.log"
        ],
        "clean": [
           "rm -rf build/*"
        ]
     }
}
